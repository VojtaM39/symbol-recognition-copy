<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/constraintLayout">

    <Button
            android:text="@string/add"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/btnAdd"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="105dp"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="@+id/btnEdit"
            android:textSize="32sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp" android:onClick="launchAddActivity"
            android:background="@color/colorPrimary" android:textColor="@color/colorWhite"
            app:layout_constraintHorizontal_bias="0.505"/>
    <Button
            android:text="@string/edit"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/btnEdit"
            android:background="@color/colorPrimary" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="105dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.385" android:textSize="32sp"
            android:onClick="launchEditActivity" android:textColor="@color/colorWhite"
            app:layout_constraintHorizontal_bias="0.505"/>
    <Button
            android:text="@string/delete"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/btnDelete"
            android:background="@color/colorPrimary" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="105dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btnEdit"
            android:textSize="32sp" android:onClick="launchDeleteActivity" android:textColor="@color/colorWhite"
            app:layout_constraintHorizontal_bias="0.505"/>

    <Button
            android:text="@string/settings"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/btnSettings"
            android:background="@color/colorPrimary" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="105dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="105dp"
            android:layout_marginRight="105dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDelete"
            android:textSize="32sp" android:onClick="launchSettingsActivity" android:textColor="@color/colorWhite"
            app:layout_constraintHorizontal_bias="0.505"/>
</android.support.constraint.ConstraintLayout>
