<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:layout_centerVertical="true"
              android:orientation="vertical">
    <Button
            android:text="@string/add"
            android:layout_width="match_parent"
            android:id="@+id/btnAdd"
            android:textSize="32sp"
            android:onClick="launchAddActivity"
            android:layout_height="0dip"
            android:background="@color/colorPrimary" android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnEdit"
            android:height="1dp"/>
    <Button
            android:text="@string/edit"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:id="@+id/btnEdit"
            android:background="@color/colorPrimary"
            android:textSize="32sp"
            android:layout_weight="1"
            android:onClick="launchEditActivity" android:textColor="@color/colorWhite"

            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btnDelete"
            android:height="1dp"/>
    <Button
            android:text="@string/delete"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:id="@+id/btnDelete"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textSize="32sp" android:onClick="launchDeleteActivity" android:textColor="@color/colorWhite"
            android:height="1dp"/>

    <Button
            android:text="@string/settings"
            android:layout_width="match_parent"
            android:id="@+id/btnSettings"
            android:layout_height="7dp"
            android:background="@color/colorPrimary"
            android:textSize="32sp" android:onClick="launchSettingsActivity" android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnDelete"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:height="1dp"/>
</LinearLayout>